<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <!--create gradient you want to use with the angle you want to use-->
                <shape android:shape="rectangle">
                    <stroke android:color="#0F000000" android:width="1dp"/>
                    <corners android:radius="3dp" />

                </shape>
            </item>
            <!--        create the stroke for top, left, bottom and right with the dp you want-->
        </layer-list>

    </item>
    <item>
        <layer-list>
            <item>
                <!--create gradient you want to use with the angle you want to use-->
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:centerColor="#0F000000"
                        android:centerY="0.86666"
                        android:endColor="#29000000"
                        android:startColor="#0F000000" />
                    <corners android:radius="3dp" />

                </shape>
            </item>
            <!--        create the stroke for top, left, bottom and right with the dp you want-->
            <item
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp">
                <shape android:shape="rectangle">
                    <!--                fill the inside in the color you want (could also be a gradient again if you want
                                   to, just change solid to gradient and enter angle, start, maybe center, and end
                                    color)-->
                    <solid android:color="#fff" />
                    <corners android:radius="3dp" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>