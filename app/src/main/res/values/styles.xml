<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButton">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/segoe_text_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/custom_butt_textcolor</item>
        <!--        <item name="android:textColor">#E4000000</item>-->
        <item name="android:background">@drawable/custom_butt</item>
    </style>

    <style name="PillButton">
        <item name="android:fontFamily">@font/segoe_text_regular</item>
        <item name="android:textSize">12sp</item>

        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/dark_primary_text</item>
    </style>

    <style name="PillButtonPrimary" parent="PillButton">

        <item name="android:text">Accept</item>
        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:background">@drawable/navbar_slider</item>
    </style>

    <style name="PillButtonSecondary" parent="PillButton">
        <item name="android:text">Withdraw</item>
        <item name="android:textColor">@color/light_primary_text</item>
        <item name="android:background">@drawable/navbar_track</item>
    </style>

    <style name="LargePillButtonPrimary" parent="PillButtonPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">132dp</item>
        <item name="android:layout_height">38dp</item>
    </style>
    <style name="LargePillButtonSecondary" parent="PillButtonSecondary">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">132dp</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="InitialsPlaceholder">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/contact_placeholder_background</item>
        <item name="android:fontFamily">@font/segoe_display_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:text">BS</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_primary_text</item>
    </style>

    <style name="AppnameHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/segoe_display_semibold</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/light_primary_text</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources><!--
